<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="8dp"
    android:background="@drawable/unlock"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_layout_label_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_label_lesson"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_label_black_24dp" />

        <TextView android:layout_marginLeft="16dp"
            android:id="@+id/tv_new_lesson_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/iv_label_lesson"
            android:gravity="center_vertical"
            android:text="@string/new_lesson"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text" />


    </RelativeLayout>




</LinearLayout>