<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="8dp"
    android:background="@drawable/plus_new_words"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout_label_new_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_label_new_words"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_label_black_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_new_words_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/iv_label_new_words"
            android:text="Новые слова"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_new_words_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_new_words_number"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/iv_label_new_words"
            android:text="Учить новые слова"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/divider" />
    </RelativeLayout>

</LinearLayout>