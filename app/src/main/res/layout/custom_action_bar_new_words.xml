<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_back_arrow"
        android:gravity="center"  android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:text="Урок "
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <ImageView
        android:id="@+id/action_bar_correct_icon"
        android:layout_width="wrap_content"  android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/action_bar_correct_text"
        android:paddingRight="4dp"
        android:src="@drawable/ic_check_black_24dp" />

    <TextView
        android:id="@+id/action_bar_correct_text"  android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/action_bar_incorrect_icon"
        android:paddingRight="8dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/action_bar_incorrect_icon"
        android:layout_width="wrap_content"  android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/action_bar_incorrect_text"
        android:paddingRight="4dp"
        android:src="@drawable/ic_warning_white_24dp" />

    <TextView
        android:id="@+id/action_bar_incorrect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:text="100"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>