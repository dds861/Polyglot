<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_second_label_description"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="8dp"
    android:background="@drawable/borders_green"
    android:orientation="vertical"
    android:visibility="visible">


    <RelativeLayout
        android:id="@+id/rl_layout_label_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/item_info"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv_info"
            android:gravity="center"
            android:text="Описание урока"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text" />


    </RelativeLayout>


</LinearLayout>